// Q6: Read and display a square matrix using functions
#include <stdio.h>
void read(int n, int a[n][n]) {
    int i, j; for(i=0;i<n;i++) for(j=0;j<n;j++) scanf("%d",&a[i][j]);
}
void display(int n, int a[n][n]) {
    int i,j; for(i=0;i<n;i++) { for(j=0;j<n;j++) printf("%d ",a[i][j]); printf("\n"); }
}
int main() {
    int n;
    printf("Order: ");
    scanf("%d",&n);
    int m[n][n];
    printf("Enter matrix:\n");
    read(n,m);
    printf("Matrix is:\n");
    display(n,m);
    return 0;
}
