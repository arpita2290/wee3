// Q12: Merge two floating arrays, display in reverse
#include <stdio.h>
int main(){
    int n1,n2,i;
    printf("Sizes: ");
    scanf("%d%d",&n1,&n2);
    float a[n1],b[n2],c[n1+n2];
    printf("Arr1: ");
    for(i=0;i<n1;i++) scanf("%f",&a[i]);
    printf("Arr2: ");
    for(i=0;i<n2;i++) scanf("%f",&b[i]);
    for(i=0;i<n1;i++) c[i]=a[i];
    for(i=0;i<n2;i++) c[n1+i]=b[i];
    printf("Merged rev: ");
    for(i=n1+n2-1;i>=0;i--) printf("%.2f ",c[i]);
    return 0;
}
